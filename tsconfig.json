{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    ".storybook",
    "__stories__/**/*",
    "__tests__/**/*",
    "config",
    "src/**/*",
    "src2/**/*"
  ],
  "exclude": ["node_modules"]
}
